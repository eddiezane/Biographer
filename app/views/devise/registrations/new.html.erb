<div class="small-4 small-centered columns text-center"><h2>Sign up</h2></div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="small-4 small-centered columns"><%= f.label :email %><br />
      <%= f.email_field :email, :autofocus => true %></div>
  </div>

  <div class="row">
    <div class="small-4 small-centered columns"><%= f.label :password %><br />
      <%= f.password_field :password %></div>
  </div>

  <div class="row">
    <div class="small-4 small-centered columns"><%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %></div>
  </div>
  <div class="row">
    <div class="small-4 small-centered columns"><%= f.submit "Sign up" %></div>
  <% end %>
  <div class="small-4 small-centered columns">
    <%= render "devise/shared/links" %>
  </div>
</div>
